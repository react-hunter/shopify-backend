extends ../../admin-layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Add new vendor

  form(action='/vendors/add', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') Retailer Name
      .col-md-7
        input.form-control(type='text', name='name', id='name', value=vendorData.name)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='brandName') Brand Name
      .col-md-7
        input.form-control(type='text', name='brandName', id='brandName', value=vendorData.brandName)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='shipMethod') Shipping Method
      .col-md-7
        select.form-control(name='shipMethod', id='shipMethod')
          option(value='usps', selected= vendorData.shipMethod == 'usps') USPS
          option(value='fedex', selected= vendorData.shipMethod == 'fedex') Fedex
          option(value='ups', selected= vendorData.shipMethod == 'ups') UPS
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='apiShop') API Shop Name
        span(class='explainText')  (When shop url is xxx.myshopify.com, please insert 'xxx'.)
      .col-md-7
        input.form-control(type='text', name='apiShop', id='apiShop', value=vendorData.apiShop)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='apiKey') API Key
      .col-md-7
        input.form-control(type='text', name='apiKey', id='apiKey', value=vendorData.apiKey)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='apiPassword') API Password
      .col-md-7
        input.form-control(type='text', name='apiPassword', id='apiPassword', value=vendorData.apiPassword)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='sharedSecret') Shared Secret
      .col-md-7
        input.form-control(type='text', name='sharedSecret', id='sharedSecret', value=vendorData.sharedSecret)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='sftpHost') SFTP Host
      .col-md-7
        input.form-control(type='text', name='sftpHost', id='sftpHost', value=vendorData.sftpHost)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='sftpUsername') SFTP Username
      .col-md-7
        input.form-control(type='text', name='sftpUsername', id='sftpUsername', value=vendorData.sftpUsername)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='sftpPassword') SFTP Password
      .col-md-7
        input.form-control(type='text', name='sftpPassword', id='sftpPassword', value=vendorData.sftpPassword)
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Add Vendor
